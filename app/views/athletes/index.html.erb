<hr>

<div class="row-fluid">
  <h3>Athlete Information</h3>
</div>

<div class="row-fluid">
  <table class="table table-striped table-hover">

    <tr>
      <th>First Name</th>
      <th>Surname</th>
      <th>Height/Weight</th>
      <th>Country/Team</th>
      <th>Gender</th>
      <th>Sport/Discipline</th>
      <th>Events</th>
	  <th>Link</th>
    </tr>
	
    <% @athletes.each do |athlete| %>
    <tr>
      <th><%= athlete.fname %></th>
      <th><%= athlete.sname %></th>
      <td><%= athlete.height %> / <%= athlete.weight %></td>
      <td><%= athlete.country %> (<%= athlete.code %>)</td>
      <td><%= athlete.gender %></td>
      <td><%= athlete.sport %></td>
      <td><%= athlete.event %></td>
	  <td>
	    <%= link_to athletes_show_path(:id => athlete.id) do %>
        <i class="icon-retweet"></i>
        <% end  %>
      </td>
    </tr>
    <% end %>
	
  </table>
</div>