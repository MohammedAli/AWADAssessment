<!DOCTYPE html>
<html>
<head>
  <title>AthleteBBC</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container" style="margin-top: 20px;">
  <% if notice || alert  %>
    <div class="row-fluid alert alert-warning">
      <p><%= notice %></p>
      <p><%= alert %></p>
    </div>
  <% end  %>

  <%= render 'layouts/heading' %>
    
  <%= yield %>
</div>

</body>
</html>
